//https://codeforces.com/contest/1760/problem/B

#include <bits/stdc++.h>

using namespace std;
typedef long long ll;

void solve(){
	int n;
	cin >> n;
	char maxChar = 'a';
	for(int i = 0; i < n; ++i) {
		char c;
		cin >> c;
		if(c > maxChar) maxChar = c;
	}
	cout << maxChar - 'a' + 1 << endl;
	

}

int main()
{
    ios::sync_with_stdio(false);
    cin.tie(0);
    int tt;    
    cin >> tt;
    while(tt--){
        solve();
    }

    return 0;
}
